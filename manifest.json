{
    "manifest_version": 3,
    "name": "PDF Console Logger",
    "version": "1.0",
    "permissions": ["activeTab"],
    "icons": {
        "128": "assets/icon2.png"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "action":{
        "default_popup": "popup.html",
        "default_title": "Read Aloud"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "pdfjs/pdf.mjs",
                "pdfjs/pdf.worker.mjs"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}